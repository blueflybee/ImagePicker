<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ImagePickerTheme.FullScreen" parent="ImagePickerTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="ImagePickerTheme.CheckBox" parent="ImagePickerTheme">
        <item name="colorControlNormal">@color/image_picker_checkbox_normal</item>
        <item name="colorControlActivated">@color/image_picker_checkbox_selected</item>
    </style>

    <style name="ImagePickerTheme.RadioButton" parent="ImagePickerTheme">
        <item name="colorControlNormal">@color/image_picker_radiobutton_normal</item>
        <item name="colorControlActivated">@color/image_picker_radiobutton_selected</item>
    </style>

    <style name="ImagePickerTheme.Button" parent="ImagePickerTheme">
        <!--正常状态下的颜色  -->
        <item name="colorButtonNormal">@color/image_picker_button_normal</item>
        <!--覆盖色，按下的颜色  -->
        <item name="colorControlActivated">@color/image_picker_button_selected</item>
        <item name="colorControlHighlight">@color/image_picker_button_selected</item>
    </style>

    <style name="ImagePickerTheme.FolderPopupWindow.Anim" parent="ImagePickerTheme">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>
</resources>
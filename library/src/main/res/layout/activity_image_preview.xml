<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <io.github.changjiashuai.widget.ViewPagerFixed
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000" />

    <include
        android:id="@+id/top_bar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#cc22292c"
        android:visibility="gone">

        <io.github.changjiashuai.widget.SuperCheckBox
            android:id="@+id/cb_origin"
            style="@style/ImagePickerTheme.SuperCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"
            android:text="原图(3.07M)"
            android:textColor="#FFF" />

        <io.github.changjiashuai.widget.SuperCheckBox
            android:id="@+id/cb_check"
            style="@style/ImagePickerTheme.SuperCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:drawablePadding="4dp"
            android:includeFontPadding="true"
            android:paddingLeft="8dp"
            android:text="选择"
            android:textColor="#ffffff" />
    </RelativeLayout>
</RelativeLayout>